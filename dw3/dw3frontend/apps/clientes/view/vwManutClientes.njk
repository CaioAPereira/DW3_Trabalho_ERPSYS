{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Clientes
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/clientes/insertClientes" class="btn btn-primary">
              Inserir novo cliente
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabClientes" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>CPF/CNPJ</th>
                  <th>Nome / Razão Social</th>
                  <th>E-mail</th>
                  <th>Removido?</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      <a href="/clientes/viewClientes/{{ reg.clienteid }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>
                      <a href="/clientes/UpdateClientes/{{ reg.clienteid }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{reg.cpf_cnpj}}</td>
                    <td>{{reg.nomerazaosocial}}</td>
                    <td>{{reg.email}}</td>
                    <td>{{ "Sim" if reg.removido else "Não" }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>

          </div>

        </div>
      </div>
    </div>
  </div>

  <script>

    window.onload = function () {
      windowOnLoad();
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwClientes|onload] Servidor retornou o erro:" + localErro);
      }

      new DataTable('#tabClientes');
    };
  </script>

{% endblock %}