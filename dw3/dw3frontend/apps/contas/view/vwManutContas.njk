{% extends "templates/base.html" %}

{% block content %}

  <ol class="breadcrumb mb-2">
    <li class="breadcrumb-item active">{{title}}</li>
  </ol>
  <div class="row">
    <div class="col-xl-12">

      <div class="card-header">
        Manutenção de Contas
      </div>

      <div class="card-body">
        <div class="">
          <div style="margin-bottom: 15px;">
            <a href="/contas/insertContas" class="btn btn-primary">
              Inserir nova conta
            </a>
          </div>

          <div style="background-color: #f8f9fa">
            <table id="tabContas" class="display" style="width:100%">
              <thead>
                <tr>
                  <th>Ação</th>
                  <th>ID</th>
                  <th>Descrição</th>
                  <th>Valor (R$)</th>
                  <th>Data de Vencimento</th>
                  <th>Data de Recebimento</th>
                  <th>Cliente</th>
                </tr>
              </thead>
              <tbody>
                {% for reg in data %}
                  <tr>
                    <td>
                      {# Link para visualização dos dados #}
                      <a href="/contas/viewContas/{{ reg.contaid }}" title="Visualizar">
                        <i class="fas fa-search"></i>
                      </a>

                      {# Link para atualização e remoção dos dados #}
                      <a href="/contas/UpdateContas/{{ reg.contaid }}" title="Atualizar" style="margin-left: 10px;">
                        <i class="fas fa-pencil-alt"></i>
                      </a>
                    </td>
                    <td>{{ reg.contaid }}</td>
                    <td>{{ reg.descricao }}</td>
                    <td>{{ reg.valor | floatformat(2, 'pt_BR') }}</td>
                    <td>{{ reg.dtavencimento }}</td>
                    <td>{{ reg.dtarecebimento }}</td>
                    <td>{{ reg.nomeRazaoSocial }}</td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    window.onload = function () {
      windowOnLoad();

      //@ Caso tenha dado erro no servidor frontEnd, ele será mostrado aqui.
      const localErro = "{{erro}}";
      if (localErro != "") {
        alert("[vwContas|onload] Servidor retornou o erro: " + localErro);
      }

      new DataTable('#tabContas');
    };
  </script>

{% endblock %}
